<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:padding="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:background="#000000">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/root"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="?attr/color_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:tint="?attr/color_12"
            app:srcCompat="@drawable/ic_copy" />


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:maxLines="1"
        android:text="Filter"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="?attr/color_5"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="visible"
        app:autoSizeMaxTextSize="12sp"
        app:autoSizeMinTextSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/root"
        app:layout_constraintStart_toStartOf="@+id/root"
        app:layout_constraintTop_toBottomOf="@+id/root" />
</androidx.constraintlayout.widget.ConstraintLayout>
