<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomMenu" parent="Theme.Compose">
        <item name="android:background">@drawable/background_bottom_menu</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.MaterialComponents.Slider">
        <item name="android:progressTint">?attr/color_5</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:background">@null</item>
        <item name="android:secondaryProgressTint">?attr/color_3</item>
        <item name="android:thumbTint">?attr/color_5</item>
        <item name="thumbColor">?attr/color_5</item>
        <item name="tickColor">?attr/color_5</item>
        <item name="tickColorActive">?attr/color_5</item>
        <item name="tickColorInactive">?attr/color_5</item>
        <item name="tickVisible">false</item>
        <item name="trackColor">?attr/color_2</item>
        <item name="trackHeight">26dp</item>
        <item name="labelStyle">@style/CustomSeekBarTooltip</item>
    </style>

    <style name="CustomSeekBarTooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">?attr/color_14</item>
        <item name="android:textAppearance">@style/CustomSeekBarTextAppearance</item>
    </style>

    <style name="CustomSeekBarTextAppearance" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/color_2</item>
    </style>

    <style name="CustomBottomSheetButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?attr/color_12</item>
        <item name="cornerRadius">5dp</item>
        <item name="iconSize">36dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/color_10</item>
        <item name="strokeColor">?attr/color_12</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>