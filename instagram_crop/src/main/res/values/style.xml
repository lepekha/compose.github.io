<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabModeText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
    </style>

    <declare-styleable name="SliderBox">
        <attr name="sbTextSize" format="dimension" />
        <attr name="sbSelectedTextColor" format="color|reference" />
        <attr name="sbUnselectedTextColor" format="color|reference" />
        <attr name="sbActiveTabDrawable" format="integer" />
    </declare-styleable>

    <style name="sliderMode">
        <item name="sbSelectedTextColor">@color/main_background</item>
        <item name="sbUnselectedTextColor">@color/crop_menu_unselect</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/tab_menu_round</item>
        <item name="sbActiveTabDrawable">@drawable/tab_menu_selected_round</item>
        <item name="sbTextSize">16sp</item>
    </style>

</resources>