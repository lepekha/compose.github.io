<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomMenu" parent="Theme.InHelp">
        <item name="android:background">@drawable/background_bottom_menu</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="CustomBottomSheetButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?attr/color_12</item>
        <item name="cornerRadius">5dp</item>
        <item name="iconSize">36dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/color_10</item>
        <item name="strokeColor">?attr/color_12</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>