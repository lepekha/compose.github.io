<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:fontFamily">@font/oswald</item>-->
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:navigationBarColor">@color/main_background</item>
    </style>

    <style name="NewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:navigationBarColor">@color/main_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.ButtonSaveVideo" parent="AppTheme">
        <item name="android:background">@drawable/btn_menu_save_video_round</item>
    </style>

    <style name="NewTheme.ButtonSaveVideo" parent="NewTheme">
        <item name="android:background">@drawable/btn_menu_repost_round</item>
    </style>

    <style name="Tegs.EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#f2558c54</item>
        <item name="colorControlActivated">#f2558c54</item>
        <item name="colorControlHighlight">#f2558c54</item>
    </style>

</resources>
