<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/theme_bottom_menu_margin"
    android:animateLayoutChanges="true"
    tools:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_secondary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ua.com.compose.image_maker.FrameImageView
            android:id="@+id/imgView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:scaleX="1"
            app:layout_constraintBottom_toTopOf="@+id/btnFlip"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/btnFlip"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="50dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:backgroundTint="?attr/color_2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/module_image_rotate_ic_flip" />

        <ImageButton
            android:id="@+id/btnRotateLeft"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:backgroundTint="?attr/color_2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/btnFlip"
            app:layout_constraintEnd_toStartOf="@+id/btnFlip"
            app:layout_constraintTop_toTopOf="@+id/btnFlip"
            app:srcCompat="@drawable/module_image_rotate_ic_rotate_left" />

        <ImageButton
            android:id="@+id/btnRotateRight"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:backgroundTint="?attr/color_2"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/btnFlip"
            app:layout_constraintStart_toEndOf="@+id/btnFlip"
            app:layout_constraintTop_toTopOf="@+id/btnFlip"
            app:srcCompat="@drawable/module_image_rotate_ic_rotate_right" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>