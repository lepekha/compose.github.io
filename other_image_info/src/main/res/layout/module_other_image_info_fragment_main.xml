<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDate"
        app:layout_constraintVertical_bias="0"
        tools:srcCompat="@tools:sample/avatars"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:tint="?attr/color_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_image" />

    <ImageView
        android:id="@+id/imgDate"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:tint="?attr/color_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgImage"
        app:srcCompat="@drawable/ic_event" />

    <TextView
        android:id="@+id/txtImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:singleLine="true"
        android:textColor="?attr/color_12"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/txtImageDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgImage"
        app:layout_constraintTop_toTopOf="@+id/imgImage"
        tools:text="TextView" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:singleLine="true"
        android:textColor="?attr/color_12"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDateDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgImage"
        app:layout_constraintTop_toTopOf="@+id/imgDate"
        tools:text="TextView" />

    <TextView
        android:id="@+id/txtImageDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/color_11"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtImage"
        app:layout_constraintTop_toBottomOf="@+id/txtImage"
        tools:text="TextView" />

    <TextView
        android:id="@+id/txtDateDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/color_11"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txtImage"
        app:layout_constraintTop_toBottomOf="@+id/txtDate"
        tools:text="TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>